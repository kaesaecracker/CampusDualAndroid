<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/widget_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentStart="true"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/widget_weekday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Someday"
                android:textColor="@color/icons"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/widget_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/widget_weekday"
                android:text="11.11."
                android:textColor="@color/icons"/>

            <TextView
                android:id="@+id/widget_lessonCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:text="5 Lessons"
                android:textColor="@color/icons" />

            <TextView
                android:id="@+id/widget_fromTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/widget_lessonCount"
                android:layout_alignParentEnd="true"
                android:text="7:45-15:15"
                android:textColor="@color/icons" />
        </RelativeLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/widget_lineTop"
            android:layout_below="@+id/widget_header"/>

        <RelativeLayout
            android:id="@+id/widget_currentLesson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/widget_lineTop"
            android:background="@color/icons"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/widget_currentLesson_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="8dp"
                android:text="@string/widget_current"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/widget_currentLesson_time"
                android:text="00:00-00:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/widget_currentLesson_description"
                android:gravity="end" />

            <TextView
                android:id="@+id/widget_currentLesson_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/widget_currentLesson_title"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="4dp"
                android:text="X.XXX" />

            <TextView
                android:id="@+id/widget_currentLesson_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/widget_currentLesson_description"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@id/widget_currentLesson_room"
                android:lines="1"
                android:text="Debugging XXL" />
        </RelativeLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            android:id="@+id/widget_lineBottom"
            android:layout_below="@+id/widget_currentLesson"/>

        <RelativeLayout
            android:id="@+id/widget_nextLesson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/widget_lineBottom"
            android:background="@color/icons"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/widget_nextLesson_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="8dp"
                android:text="@string/widget_next"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/widget_nextLesson_time"
                android:text="00:00-00:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/widget_nextLesson_description"
                android:gravity="end" />

            <TextView
                android:id="@+id/widget_nextLesson_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/widget_nextLesson_title"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="4dp"
                android:text="X.XXX" />

            <TextView
                android:id="@+id/widget_nextLesson_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/widget_nextLesson_description"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@id/widget_nextLesson_room"
                android:lines="1"
                android:text="Debugging XXL" />
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>