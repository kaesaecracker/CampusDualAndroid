<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin">

    <RelativeLayout
        android:id="@+id/widget_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/widget_weekday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:lines="1"
            android:text="@string/sample_weekday"
            android:textColor="@color/icons"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/widget_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/widget_weekday"
            android:layout_alignParentStart="true"
            android:lines="1"
            android:text="@string/sample_date"
            android:textColor="@color/icons" />

        <TextView
            android:id="@+id/widget_lessonCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/widget_weekday"
            android:gravity="end"
            android:lines="1"
            android:text="@string/sample_lessons"
            android:textColor="@color/icons" />

        <TextView
            android:id="@+id/widget_fromTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/widget_lessonCount"
            android:layout_alignParentEnd="true"
            android:lines="1"
            android:text="@string/sample_timespan"
            android:textColor="@color/icons" />
    </RelativeLayout>

    <TextView
        android:id="@+id/widget_lineTop"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/widget_header"
        android:background="@color/divider"
        android:lines="1"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/widget_currentLesson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/widget_lineTop"
        android:background="@color/icons"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/widget_currentLesson_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="8dp"
            android:lines="1"
            android:text="@string/widget_current"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/widget_currentLesson_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:lines="1"
            android:text="@string/sample_time" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_toStartOf="@+id/widget_currentLesson_time"
            android:lines="1"
            android:text="@string/widget_timeCurrent" />

        <TextView
            android:id="@+id/widget_currentLesson_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/widget_currentLesson_title"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:lines="1"
            android:text="@string/sample_lesson_room" />

        <TextView
            android:id="@+id/widget_currentLesson_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/widget_currentLesson_description"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/widget_currentLesson_room"
            android:lines="1"
            android:text="@string/sample_lesson_title" />
    </RelativeLayout>

    <TextView
        android:id="@+id/widget_lineBottom"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/widget_currentLesson"
        android:background="@color/divider"
        android:lines="1"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/widget_nextLesson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/widget_lineBottom"
        android:background="@color/icons"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_toStartOf="@+id/widget_nextLesson_time"
            android:lines="1"
            android:text="@string/widget_timeNext" />

        <TextView
            android:id="@+id/widget_nextLesson_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="8dp"
            android:lines="1"
            android:text="@string/widget_next"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/widget_nextLesson_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:lines="1"
            android:text="@string/sample_time" />

        <TextView
            android:id="@+id/widget_nextLesson_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/widget_nextLesson_title"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:lines="1"
            android:text="@string/sample_lesson_room" />

        <TextView
            android:id="@+id/widget_nextLesson_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/widget_nextLesson_description"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/widget_nextLesson_room"
            android:lines="1"
            android:text="@string/sample_lesson_title" />
    </RelativeLayout>

</RelativeLayout>