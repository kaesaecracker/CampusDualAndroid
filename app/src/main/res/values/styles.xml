<resources>
    <style name="SettingsCard.View" parent="CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_margin">12dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="SettingsCard.Headline" parent="">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="android:textColor">?colorPrimaryDark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SettingsCard.Explanation" parent="">
        <item name="android:autoLink">web</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Schedule.Header" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?colorPrimaryDark</item>
        <item name="android:elevation">8dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="Schedule.LessonText" parent="@style/TextAppearance.MaterialComponents.Body1">

    </style>

    <style name="Schedule.LessonTitle" parent="Schedule.LessonText">
        <item name="android:color">?colorPrimary</item>
    </style>

</resources>
