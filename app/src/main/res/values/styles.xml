<resources>

    <style name="AppTheme.Light" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Light" />


    <style name="SettingsCard.View" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">3dp</item>
        <item name="cardCornerRadius">5dp</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">8dp</item>

        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="SettingsCard.Layout" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="SettingsCard.Input" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="SettingsCard.Text" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="SettingsCard.Headline" parent="SettingsCard.Text">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6
        </item>
        <item name="android:textColor">?colorPrimaryDark</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="SettingsCard.Explanation" parent="SettingsCard.Text">
        <item name="android:autoLink">web</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="Schedule.Header" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?colorPrimaryDark</item>
        <item name="android:elevation">8dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="Schedule.LessonText" parent="@style/TextAppearance.MaterialComponents.Body1">

    </style>

    <style name="Schedule.LessonTitle" parent="Schedule.LessonText">
        <item name="android:color">?colorPrimary</item>
    </style>

</resources>
